<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <RadioButton
                android:gravity="top"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:id="@+id/radioAddress"
                android:layout_width="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/addressfield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_regular"
                app:layout_constraintStart_toEndOf="@id/radioAddress"
                android:lineHeight="20dp"
                android:paddingRight="8dp"
                android:text="Home\n19-1-924/A/11/1 \nMurli nagar\nBahadurpura\nHyderabad-500064"
                app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/deleteAddress"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    app:layout_constraintTop_toTopOf="@id/addressfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:fontFamily="@font/dm_sans_regular"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <ImageView
                    app:layout_constraintEnd_toStartOf="@id/deleteAddress"
                    android:id="@+id/editAddress"
                    app:layout_constraintTop_toTopOf="@id/addressfield"
                    android:layout_width="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="24dp"
                    android:src="@drawable/edit_circle"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/dm_sans_regular"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>