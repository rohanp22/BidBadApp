<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="#FFF"
    android:layout_height="120dp">

    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:id="@+id/myBidImage"
        android:layout_width="100dp"
        android:layout_height="120dp" />

    <TextView
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_toRightOf="@id/myBidImage"
        android:text="Title of product"
        android:id="@+id/titleMyBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/yourBid"
        android:layout_marginTop="5dp"
        android:layout_below="@id/titleMyBid"
        android:layout_toRightOf="@id/myBidImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/myBidImage"
        android:id="@+id/status"
        android:layout_below="@id/yourBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>