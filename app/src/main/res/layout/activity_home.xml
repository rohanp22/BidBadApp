<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:visibility="visible"
        android:src="@drawable/ic_b_iocn"
        app:backgroundTint="@color/gradient_color"
        app:fabCustomSize="48dp"
        app:layout_anchor="@id/bar" />

    <View
        android:id="@+id/shadowview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_drawable"
        app:layout_anchor="@id/bar" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        app:fabCradleMargin="0dp"
        app:fabCradleRoundedCornerRadius="0dp"
        app:backgroundTint="@color/white"
        app:fabAlignmentMode="center"
        app:hideOnScroll="false">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:animateLayoutChanges="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:src="@drawable/home_animated"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/homeText"
                        android:layout_width="wrap_content"
                        android:drawableLeft="@drawable/circular_bg"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/resultIcon"
                        android:padding="4dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/results_animated"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/resultsText"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="Results"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/blankIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rewardsIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/rewards_animated" />

                    <TextView
                        android:id="@+id/rewardsText"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="Rewards"
                        android:minWidth="10dp"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profileIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@color/black"
                        android:src="@drawable/profile_animated" />

                    <TextView
                        android:id="@+id/profileText"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:text="Profile"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
