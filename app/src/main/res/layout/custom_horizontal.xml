<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/item_bg"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        card_view:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="4dp"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/flash_layout"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/flash"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Flash sale"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="sans-serif-condensed-light"
                                android:text="30:45"
                                android:textColor="@color/white"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!--                    <ImageView-->
                    <!--                        android:layout_width="15dp"-->
                    <!--                        android:layout_height="15dp"-->
                    <!--                        android:layout_marginTop="5dp"-->
                    <!--                        android:layout_marginRight="5dp"-->
                    <!--                        android:src="@drawable/ic_access_time_black_24dp" />-->

                    <TextView
                        android:id="@+id/time"
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@android:color/holo_green_light"
                        android:textSize="12dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_launcher_background"
                        android:transitionName="trans" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                    <!--                    <TextView-->
                    <!--                        android:id="@+id/mrp"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_below="@+id/name"-->
                    <!--                        android:layout_marginTop="5dp"-->
                    <!--                        android:text="MRP : â‚¹"-->
                    <!--                        android:textSize="12dp" />-->

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/mrprp"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_below="@+id/name"-->
                    <!--                        android:layout_marginTop="5dp"-->
                    <!--                        android:layout_toRightOf="@+id/mrp"-->
                    <!--                        android:textSize="12dp" />-->

                    <TextView
                        android:id="@+id/sprp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_alignParentEnd="true"
                        android:textSize="1dp" />


                    <Button
                        android:id="@+id/bidbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@+id/sprp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gradient_curved"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textAllCaps="false"
                        android:text="Bid Now"
                        android:textColor="#FFF"
                        android:textSize="12dp"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>