<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    >
    <ImageView
        android:id="@+id/otpImage"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:src="@drawable/headphones"
        app:layout_constraintBottom_toTopOf="@+id/otpTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/otpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/dm_sans_regular"
        android:text="Verify OTP"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/otpDescription"
        app:layout_constraintStart_toStartOf="@+id/otpImage"
        app:layout_constraintTop_toBottomOf="@+id/otpImage" />

    <TextView
        android:id="@+id/otpDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/dm_sans_regular"
        android:text="We sent you a code to verify your phone number +91 XXXXXXXXXX"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/otpEditCode1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/otpTitle"
        app:layout_constraintTop_toBottomOf="@+id/otpTitle" />

    <EditText
        android:id="@+id/otpEditCode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/leaderboard_item_bg"
        android:fontFamily="@font/dm_sans_regular"
        android:hint="X"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/noOtpText"
        app:layout_constraintEnd_toStartOf="@+id/otpEditCode2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otpDescription" />

    <EditText
        android:id="@+id/otpEditCode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaderboard_item_bg"
        android:fontFamily="@font/dm_sans_regular"
        android:hint="X"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/otpEditCode1"
        app:layout_constraintEnd_toStartOf="@+id/otpEditCode3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otpEditCode1"
        app:layout_constraintTop_toTopOf="@+id/otpEditCode1" />

    <EditText
        android:id="@+id/otpEditCode3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaderboard_item_bg"
        android:fontFamily="@font/dm_sans_regular"
        android:hint="X"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/otpEditCode2"
        app:layout_constraintEnd_toStartOf="@+id/otpEditCode4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otpEditCode2"
        app:layout_constraintTop_toTopOf="@+id/otpEditCode2" />

    <EditText
        android:id="@+id/otpEditCode4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaderboard_item_bg"
        android:fontFamily="@font/dm_sans_regular"
        android:hint="X"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/otpEditCode3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otpEditCode3"
        app:layout_constraintTop_toTopOf="@+id/otpEditCode3" />

    <EditText
        android:id="@+id/otpEditCode5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaderboard_item_bg"
        android:fontFamily="@font/dm_sans_regular"
        android:hint="X"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/otpEditCode4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otpEditCode4"
        app:layout_constraintTop_toTopOf="@+id/otpEditCode4" />

    <EditText
        android:id="@+id/otpEditCode6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leaderboard_item_bg"
        android:fontFamily="@font/dm_sans_regular"
        android:hint="X"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/otpEditCode5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/otpEditCode5"
        app:layout_constraintTop_toTopOf="@+id/otpEditCode5" />

    <TextView
        android:id="@+id/noOtpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dm_sans_regular"
        android:text="I didn't receive a code"
        app:layout_constraintBottom_toTopOf="@+id/otpResend"
        app:layout_constraintEnd_toEndOf="@+id/otpEditCode6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/otpEditCode1"
        app:layout_constraintTop_toBottomOf="@+id/otpEditCode1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/otpResend"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_regular"
        android:text="Resend"
        android:textAllCaps="false"
        android:textColor="#f9a825"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/noOtpText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/noOtpText"
        app:layout_constraintTop_toBottomOf="@+id/noOtpText" />
</androidx.constraintlayout.widget.ConstraintLayout>